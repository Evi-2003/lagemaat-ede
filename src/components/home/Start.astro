import Slider from '../Slider';
import Geopend from '../Geopend';
---

<section
  class="m-5 flex w-full max-w-2xl grid-cols-2 flex-col gap-y-5 px-5 sm:grid sm:px-10 sm:pt-20 md:grid-cols-2 lg:xl:max-w-[85vw] 2xl:max-w-[90rem]"
>
  <Slider client:load />
